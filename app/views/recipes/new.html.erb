<% if @recipe.errors.any? %>
  <% @recipe.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger"><%= msg %></div>
  <%end %>
<% end %>

<%= form_for :recipe, url:recipes_path do |f| %>
  <p>
    Название <br>
    <%=f.text_field(:name, {:class => 'form_control'}) %>
  </p>
  <p>
    Рецепт <br>
    <%=f.text_area :body %>
  </p>
  <p>
    <%= f.submit({:class=>'btn btn-success'}) %>
  </p>
<% end %>